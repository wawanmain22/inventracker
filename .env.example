# ============================================
# INVENTRACKER - INVENTORY MANAGEMENT SYSTEM
# Environment Configuration Template
# ============================================
# Copy this file to .env and configure for your environment.
# NEVER commit .env file to version control.
# ============================================

# --------------------------------------------
# APPLICATION SETTINGS
# --------------------------------------------
APP_NAME="InvenTrack"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# --------------------------------------------
# SERVER SETTINGS
# --------------------------------------------
# Uncomment to enable multi-worker mode for built-in PHP server
# PHP_CLI_SERVER_WORKERS=4

# --------------------------------------------
# SECURITY SETTINGS
# --------------------------------------------
BCRYPT_ROUNDS=12

# --------------------------------------------
# LOGGING CONFIGURATION
# --------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --------------------------------------------
# DATABASE CONFIGURATION
# --------------------------------------------
# Supported: mysql, pgsql, sqlite, sqlsrv
DB_CONNECTION=sqlite

# MySQL / PostgreSQL Configuration (uncomment if needed)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=inventracker
# DB_USERNAME=root
# DB_PASSWORD=

# --------------------------------------------
# SESSION CONFIGURATION
# --------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# --------------------------------------------
# CACHE & QUEUE CONFIGURATION
# --------------------------------------------
CACHE_STORE=database
# CACHE_PREFIX=inventracker_

QUEUE_CONNECTION=database

# --------------------------------------------
# FILESYSTEM CONFIGURATION
# --------------------------------------------
FILESYSTEM_DISK=local

# --------------------------------------------
# BROADCAST CONFIGURATION
# --------------------------------------------
BROADCAST_CONNECTION=log

# --------------------------------------------
# REDIS CONFIGURATION (Optional)
# --------------------------------------------
# Uncomment if using Redis for cache/queue/session
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# --------------------------------------------
# MAIL CONFIGURATION
# --------------------------------------------
# Supported: smtp, sendmail, mailgun, ses, postmark, log, array
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@inventracker.local"
MAIL_FROM_NAME="${APP_NAME}"

# --------------------------------------------
# AWS CONFIGURATION (Optional)
# --------------------------------------------
# Uncomment if using AWS S3 for file storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=inventracker
# AWS_USE_PATH_STYLE_ENDPOINT=false

# --------------------------------------------
# VITE / FRONTEND CONFIGURATION
# --------------------------------------------
VITE_APP_NAME="${APP_NAME}"
